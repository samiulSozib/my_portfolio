<%- include('../partials/header.ejs') %> 
<%- include('../partials/navigation.ejs') %> 

    <!-- home section -->
    <section id="home-section" class="text-left text-dark">
        <div class="dark-overlay">
          <div class="home-inner">
            <div class="container">
              <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 py-2">
                  <h5 class="display-5">Hello</h5>
                  <h3 class="display-4 font-weight-bold animate__animated animate__backInLeft wow slideInLeft" data-wow-duration="1s" data-wow-delay="1s"><%= details.title_name %> </h3>
                  <h4 class="lead animate__animated animate__backInRight wow slideInRight"><%= details.title_description %></h4>
                  <button class="btn btn-secondary">Download CV</button>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 py-2">
                  <!-- <div class="text-right">
                    <p>Your Location*</p>
                    <h5>Jashore</h5>
                    <h6>Dhaka ,Bangladesh</h6>
                    <h6>Monday, 2 March 2021</h6>
                    <h6>08:46PM</h6>
                    <h3>33 C</h3>
                  </div> -->
                  <div id="output"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- home section -->

      <!-- about section -->
    <section id="about-head-section" class="text-dark py-3">
      <div class="container">
        <div class="card">
          <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 py-1">
              <div class="card-body">
                <img src="/img/samiul.jpg" alt="" class="img-fluid">
              </div>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-12 py-1">
              <div class="card-body">
                <h3 class="display-5 font-weight-bold">About Me</h3>
                <h4 class="display-6"><%= details.about_title %></h4>
                <p class="lead text-justify"><%= details.about_description %> </p>
                <button class="btn btn-secondary">Download CV</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- about section -->

    <!-- services section -->
    <section id="services-section" class="text-dark py-3">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12">
            <h3 class="font-weight-bold display-5">Services</h3>
            <h4 class="display-6">Services Required</h4>
            <p class="lead text-justify"><%= details.service_description %></p>

          </div>
        </div>
        <div class="row text-center mt-3">
          <div class="col-lg-4 py-1">
            <div class="card card-body animate__animated animate__backInLeft wow slideInLeft">
              <h3 class="display-5">Android</h3>
              <p class="lead"><%= details.android_description %></p>
                 <a href="/project-list/android" class="btn btn-secondary">Project</a>
            </div>
          </div>
          <div class="col-lg-4 py-1">
            <div class="card card-body">
              <h3 class="display-5">Web</h3>
              <p class="lead"><%= details.web_description %></p>
              <a href="/project-list/web" class="btn btn-secondary">Project</a>
            </div>
          </div>
          <div class="col-lg-4 py-1">
            <div class="card card-body animate__animated animate__backInRight wow slideInRight">
              <h3 class="display-5">All</h3>
              <p class="lead"><%= details.all_description %></p>
              <a href="/project-list/all" class="btn btn-secondary">Project</a>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- services section -->

    <!-- contact section -->
    <section id="contact-section" class="py-3 bg-light text-dark">
      <div class="container">
        <div class="card card-body">
          <div class="row text-left">
            <div class="col-lg-12 col-md-12 col-sm-12">
              <h3 class="display-5 font-weight-bold p-2">Contact With Me</h3>
              <form class="contact-form">
                <div class="form-group">
                  <input type="email" class="form-control" id="email"placeholder="Enter email">
                </div>
                <div class="form-group">
                  <input type="name" class="form-control" id="name"placeholder="Enter name">
                </div>
                <div class="form-group">
                  <label for="comment">Comment:</label>
                  <textarea class="form-control" rows="5" id="comment"></textarea>
                </div>
                <input type="submit" class=" submit btn btn-secondary" value="Send Message">
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- contact section -->

<%- include('../partials/footer.ejs') %> 

