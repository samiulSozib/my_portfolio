<section id="project-list" class="text-light">
    <div class="container">
      <div class="container_body">
        <h3 class="text-light py-2">Project List</h3>
        <div class="card py-2 mb-2 bg-dark">
          <% if(project.length==0){ %>
            <p class="lead m-2">There Is No Project In This Category</p>
          <% } %>  
          <% for(let _project of project){ %> 
          <div class=" card-body row m-1 border-bottom">
              <div class="col-lg-4 col-md-12 col-sm-12">
                  <div class="row">
                    <div class="col-lg-12 col-md-6 col-sm-12">
                      <img src="<%= _project.thumbnail %> " alt="image-1" class="img-fluid rounded pb-1 w-100 h-100">
                    </div>
                  </div>
              </div>
              <div class="col-lg-8 col-md-12 col-sm-12 text-justify">
                  <h4 class="font-weight-bold"><%= _project.title %> </h4>
                  <p><%= truncate(_project.body) %> </p>
                  <a href="/project-list/details/<%= _project._id %> " style="color: #222222">
                  <button class="btn btn-primary">Details</button>
                  </a><hr>
                  <a href="<%= _project.links.githubLink %> "><i class="fa fa-github fa-2x mr-4"></i></a>
                  <a href="<%= _project.links.liveShow %> "><i class="fa fa-internet-explorer fa-2x"></i></a>
              </div>
          </div>
          <% } %> 
      </div>
      </div>
    </div>
</section>


