<%- include('../../partials/header.ejs') %> 

<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-body">
                <h4>All Project List</h4>
                <% if(project.length==0){ %>
                    <p>No Project Available</p>
                <% }else{ %>  
                <table class="table">
                    <thead>
                      <tr>
                        <th style="width: 10%;" scope="col">Serial NO.</th>
                        <th style="width: 70%;" scope="col">Title</th>
                        <th style="width: 20%;" scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0;i<project.length;i++){ %> 
                      <tr>
                        <th scope="row"><%= i+1 %> </th>
                        <td><%= project[i].title %> </td>
                        <td>
                            <a href="/project/edit-project/<%= project[i].id %> " class="btn btn-primary">Edit</a>
                            <a href="/project/delete-project/<%= project[i].id %> " class="btn btn-danger">Delete</a>
                        </td>
                      </tr>
                      <% } %> 
                    </tbody>
                  </table>
                  <% } %> 
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %> 

    </body>
</html>